-if flash[:success]
  .alert.alert-info
    %p= flash[:success]
-if flash[:danger]
  .alert.alert-danger
    %p= flash[:danger]

-@products.each do |p|
  .col-md-4
    #item
      #li
        %h3
        #span= p.name
        = link_to image_tag("#{p.image}"), product_path(p)
      #li
        %strong Price:
        #span= number_to_currency(p.price)
      #li
        %strong Description:
        #span= p.description
      #li
        %strong Quantity:
        #span= p.quantity

